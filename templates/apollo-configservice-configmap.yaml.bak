{{- if and .Values.configservice.enabled (empty .Values.configservice.configMapOverrideName) -}}
apiVersion: v1
kind: ConfigMap
metadata:
  name: {{ template "apollo.configservice.fullname" . }}
  labels:
    app: {{ template "apollo-helm.name" . }}
    chart: {{ template "apollo-helm.chart" . }}
    heritage: {{ .Release.Service }}
    release: {{ .Release.Name }}
    component: "{{ .Values.configservice.name }}"
data:
{{- $root := . -}}
{{- range $key, $value := .Values.configservice.configurationFiles }}
  {{ $key }}: |
{{ toYaml $value | default "{}" | indent 4 }}
{{- end -}}
{{- end -}}